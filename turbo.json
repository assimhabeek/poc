{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},

		"db:push": {},
		"docker:up": {},
		"docker:down": {},
		"docker:ps": {},

		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"format": {
			"dependsOn": ["^format"]
		}
	}
}
